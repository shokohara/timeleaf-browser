form(name="form" ng-submit="submit()" novalidate)
    .form-group(ng-class="form.name.$dirty && form.name.$invalid ? 'has-error' : ''")
        label.control-label(for="name") 名前（必須）
        input.form-control(type="text" id="name" name="name" placeholder="{{Constant.nameMaxLength}}文字" ng-model="signUp.name" ng-maxlength="Constant.nameMaxLength" required)
        span(ng-messages="form.name.$error")
            span.help-block(ng-message="required") 必須入力項目です
            span.help-block(ng-message="maxlength") {{Constant.nameMaxLength}}文字以内で入力してください
    .form-group(ng-class="form.sex.$dirty && form.sex.$invalid ? 'has-error' : ''")
        label.control-label(for="sex") 性別
        label.radio-inline
            input(type="radio" name="sex" ng-model="signUp.sex" value="male" required)
            |男性
        label.radio-inline
            input(type="radio" name="sex" ng-model="signUp.sex" value="female" required)
            |女性
        span(ng-messages="form.sex.$error")
            span.help-block(ng-message="required") 必須選択項目です
    .form-group(ng-class="form.prefecture.$dirty && form.prefecture.$invalid ? 'has-error' : ''")
        label.control-label(for="prefecture") 都道府県
        select.form-control(name="prefecture" ng-model="signUp.prefecture" value="" required)
            each val in [{value: "", name: "未選択"},{value: "JP-01", name: "北海道"},{value: "JP-02", name: "青森県"},{value: "JP-03", name: "岩手県"},{value: "JP-04", name: "宮城県"},{value: "JP-05", name: "秋田県"},{value: "JP-06", name: "山形県"},{value: "JP-07", name: "福島県"},{value: "JP-08", name: "茨城県"},{value: "JP-09", name: "栃木県"},{value: "JP-10", name: "群馬県"},{value: "JP-11", name: "埼玉県"},{value: "JP-12", name: "千葉県"},{value: "JP-13", name: "東京都"},{value: "JP-14", name: "神奈川県"},{value: "JP-15", name: "新潟県"},{value: "JP-16", name: "富山県"},{value: "JP-17", name: "石川県"},{value: "JP-18", name: "福井県"},{value: "JP-19", name: "山梨県"},{value: "JP-20", name: "長野県"},{value: "JP-21", name: "岐阜県"},{value: "JP-22", name: "静岡県"},{value: "JP-23", name: "愛知県"},{value: "JP-24", name: "三重県"},{value: "JP-25", name: "滋賀県"},{value: "JP-26", name: "京都府"},{value: "JP-27", name: "大阪府"},{value: "JP-28", name: "兵庫県"},{value: "JP-29", name: "奈良県"},{value: "JP-30", name: "和歌山県"},{value: "JP-31", name: "鳥取県"},{value: "JP-32", name: "島根県"},{value: "JP-33", name: "岡山県"},{value: "JP-34", name: "広島県"},{value: "JP-35", name: "山口県"},{value: "JP-36", name: "徳島県"},{value: "JP-37", name: "香川県"},{value: "JP-38", name: "愛媛県"},{value: "JP-39", name: "高知県"},{value: "JP-40", name: "福岡県"},{value: "JP-41", name: "佐賀県"},{value: "JP-42", name: "長崎県"},{value: "JP-43", name: "熊本県"},{value: "JP-44", name: "大分県"},{value: "JP-45", name: "宮崎県"},{value: "JP-46", name: "鹿児島県"},{value: "JP-47", name: "沖縄県"}]
                option(ng-model="signUp.prefecture" value=val.value)= val.name
        span(ng-messages="form.prefecture.$error")
            span.help-block(ng-message="required") 必須選択項目です
    .form-group(ng-class="form.bio.$dirty && form.bio.$invalid ? 'has-error' : ''")
        label.control-label(for="bio") 自己紹介
        textarea.form-control(id="bio" rows="10" name="bio" ng-model="signUp.bio" ng-maxlength="bioMaxLength")
        span.help-block 残り{{Constant.bioMaxLength - form.bio.$viewValue.length}}文字
        span(ng-messages="form.bio.$error")
            span.help-block(ng-message="maxlength") {{textMaxLength}}文字以内で入力してください
    button.btn.btn-primary(type="submit" data-loading-text="登録中...") 登録
